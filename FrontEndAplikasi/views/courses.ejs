<script>
    // Function to filter and sort courses based on search input
    function filterAndSortCourses() {
        var input, filter, courses, course, title, i, txtValue;
        input = document.getElementById('searchInput');
        filter = input.value.toUpperCase();
        courses = document.querySelectorAll('.course-item');
        sortedCourses = Array.from(courses).sort(function(a, b) {
            var titleA = a.querySelector('h5').textContent || a.querySelector('h5').innerText;
            var titleB = b.querySelector('h5').textContent || b.querySelector('h5').innerText;
            return titleA.localeCompare(titleB);
        });

        sortedCourses.forEach(function(course) {
            title = course.querySelector('h5');
            txtValue = title.textContent || title.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                course.style.display = "";
            } else {
                course.style.display = "none";
            }
        });
    }

    // Add event listener to the search input
    document.getElementById('searchInput').addEventListener('input', filterAndSortCourses);
</script>


